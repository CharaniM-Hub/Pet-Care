<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C4C9E6">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/listImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="#C4C9E6"
            android:scaleType="centerCrop"
            android:src="@drawable/images00001"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

        <TextView
            android:id="@+id/regno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/listImage"
            android:text="1.Register No"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/Uname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@id/listImage"
            android:text="2.User Name"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/Fname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="70dp"
            android:layout_toEndOf="@id/listImage"
            android:text="3.Full Name"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="100dp"
            android:layout_toEndOf="@id/listImage"
            android:text="4.Email"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/Pno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="130dp"
            android:layout_toEndOf="@id/listImage"
            android:text="5.Phone No"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="160dp"
            android:layout_toEndOf="@id/listImage"
            android:text="6.Password"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/Skills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="190dp"
            android:layout_toEndOf="@id/listImage"
            android:text="7.Experience/Skills"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="220dp"
            android:layout_toEndOf="@id/listImage"
            android:text="8.Price"
            android:textColor="@color/black"
            android:textSize="16dp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>