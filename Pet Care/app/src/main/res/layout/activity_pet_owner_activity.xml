<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".PetOwnerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <!-- Header Section -->
        <TextView
            android:id="@+id/txtHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pet Owner Dashboard"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:padding="16dp"
            />

        <!-- Pet Name Input -->
        <EditText
            android:id="@+id/editTextPetName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="Enter Pet Name"
            tools:ignore="TouchTargetSizeCheck" />

        <!-- Appointment Date Input -->
        <EditText
            android:id="@+id/editTextAppointmentDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="Enter Appointment Date"
            tools:ignore="TouchTargetSizeCheck" />

        <!-- Button to Make Appointment -->
        <Button
            android:id="@+id/btnMakeAppointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make Appointment"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            />

        <!-- Other Content and Features Specific to Pet Owner Dashboard -->

    </LinearLayout>
</RelativeLayout>
